@if (ShowDetailsPage)
{
	<div class="container-fluid mt-5">
		<div class="row">
			<div class="col-lg-12">
				<div class="card border-success shadow-lg">
					<div class="card-header"> @EmployeeDetails.Name Details</div>
					<div class="card-body">
						<div class="hstack gap-2">
							<div class="vstack gap-3">
								<table class="table border-danger">
									<tbody>
										<tr>
											<td><h6 class="fw-bold">Name:</h6></td>
											<td>@EmployeeDetails.Name</td>
										</tr>
										<tr>
											<td><h6 class="fw-bold">Phone Number:</h6></td>
											<td>@EmployeeDetails.PhoneNumber</td>
										</tr>
										<tr>
											<td><h6 class="fw-bold">Specialization:</h6></td>
											<td>@EmployeeDetails.Specialization.Name</td>
										</tr>
										<tr>
											<td><h6 class="fw-bold">Address:</h6></td>
											<td>@EmployeeDetails.Address</td>
										</tr>
									</tbody>
								</table>
							</div>
							<table class="table border-primary">
								<tbody>
									<tr>
										<td colspan="2" class="text-center"><h6 class="fw-bold">Departament Information</h6></td>
									</tr>
									<tr>
										<td><h6 class="fw-bold">Division:</h6></td>
										<td>@EmployeeDetails.Specialization.Department.Division.Name</td>
									</tr>
									<tr>
										<td><h6 class="fw-bold">Department:</h6></td>
										<td>@EmployeeDetails.Specialization.Department.Name</td>
									</tr>
									<tr>
										<td><h6 class="fw-bold">Specialization:</h6></td>
										<td>@EmployeeDetails.Specialization.Name</td>
									</tr>
								</tbody>
							</table>
							<table class="table border-success">
								<tbody>
									<tr>
										<td colspan="2" class="text-center"><h6 class="fw-bold">Location Information</h6></td>
									</tr>
									<tr>
										<td><h6 class="fw-bold">Country:</h6></td>
										<td>@EmployeeDetails.Town.County.Country.Name</td>
									</tr>
									<tr>
										<td><h6 class="fw-bold">County:</h6></td>
										<td>@EmployeeDetails.Town.County.Name</td>
									</tr>
									<tr>
										<td><h6 class="fw-bold">Town:</h6></td>
										<td>@EmployeeDetails.Town.Name</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
					<div class="card-footer">
						<button class="btn btn-danger" @onclick="DetailsPageCloseBtnClicked">Close</button>
					</div>
				</div>
			</div>
		</div>
	</div>
}


@code {

	[Parameter] public bool ShowDetailsPage { get; set; }
	[Parameter] public Employee EmployeeDetails { get; set; } = new();
	[Parameter] public EventCallback HandleDetailsPageCloseBtnClicked { get; set; } 

	async Task DetailsPageCloseBtnClicked()
	{
		await HandleDetailsPageCloseBtnClicked.InvokeAsync();
	}
}